{
  "type": "module",
  "name": "twitter-api",
  "version": "0.1.0",
  "description": "An API to fetch data from Twitter APIs and serve it to other frontend services",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npx tsc --project ./",
    "build:watch": "npx tsc -w --project ./",
    "start": "node --experimental-specifier-resolution=node ./dist/server.js",
    "start:watch": "npx nodemon --experimental-specifier-resolution=node ./dist/server.js",
    "start:dev": "npx concurrently \"npm run build:watch\" \"npm run start:watch\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Rishikant181/twitter-api.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Rishikant181/twitter-api/issues"
  },
  "homepage": "https://github.com/Rishikant181/twitter-api#readme",
  "dependencies": {
    "connect": "^3.7.0",
    "express": "^4.17.2",
    "express-graphql": "^0.12.0",
    "graphql": "^16.3.0",
    "mongodb": "^4.4.0",
    "node-fetch": "^3.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/graphql": "^14.5.0",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^17.0.13",
    "@types/node-fetch": "^3.0.3",
    "typescript": "^4.5.5"
  }
}
